{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus2",
            "allowedValues": [
                "westus2",
                "eastus"
            ]
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "vn-generic"
        },
        "resourceGroup": {
            "type": "string",
            "defaultValue": "rg-vn-generic"
        },
        "addressSpaces": {
            "type": "array",
            "defaultValue": [
                "10.0.0.0/22"
            ]
        },
        "ipv6Enabled": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ]
        },
        "subnetCount": {
            "type": "int",
            "defaultValue": 1,
            "allowedValues": [
                1
            ]
        },
        "subnet0_name": {
            "type": "string",
            "defaultValue": "sn-default",
        },
        "subnet0_addressRange": {
            "type": "string",
            "defaultValue": "10.0.0.0/22"
        },
        "ddosProtectionPlanEnabled": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ]
        },
        "firewallEnabled": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ]
        },
        "bastionEnabled": {
            "type": "bool",
            "defaultValue": false,
            "allowedValues": [
                true,
                false
            ]
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/VirtualNetworks",
            "apiVersion": "2020-06-01",
            "location": "[parameters('location')]",
            "dependsOn": [],
            "tags": {},
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressSpaces')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnet0_name')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnet0_addressRange')]"
                        }
                    }
                ],
                "enableDdosProtection": "[parameters('ddosProtectionPlanEnabled')]"
            }
        }
    ]
}